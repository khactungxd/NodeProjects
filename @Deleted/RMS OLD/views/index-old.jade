doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/jquery-ui.css')		
		script(type='text/javascript',src='/javascripts/jquery-1.9.1.js')
		script(type='text/javascript',src='/javascripts/jquery-ui.js')
		script(type='text/javascript',src='/javascripts/jsHelper.js')
		script(type='text/javascript',src='/javascripts/list.min.js')
		script(type='text/javascript',src='/javascripts/jquery-ui-map/jquery.ui.map.js')		
		script(type='text/javascript',src='https://www.google.com/jsapi')
		script
			google.load("visualization", "1", {packages:["corechart"]});
		script(type='text/javascript',src='http://maps.google.com/maps/api/js?sensor=true')
		
		script(type='text/javascript',src='/javascripts/ScreenHandlers/mainScreen.js')
		script(type='text/javascript',src='/javascripts/ScreenHandlers/locationScreen.js')
		script(type='text/javascript',src='/javascripts/ScreenHandlers/activityScreen.js')
		script(type='text/javascript',src='/javascripts/ScreenHandlers/mapScreen.js')
		script(type='text/javascript',src='/javascripts/ScreenHandlers/chartScreen.js')
		script(type='text/javascript',src='/javascripts/main.js')
	body
		div#grey &nbsp;
		div#mainScreen
			div.header.border
				table(style="width:100%") 
					tr
						th.thScreenTitle
							h1.screenTitle.shadow RMS
						th(style='text-align:right') 
							button#btManageMandants.button Mandants
			div.body.border
				div(style='text-align:center;margin:100px; font-size:30px; font-weight:bold; ')
					img(src='images/ajax-loader.gif')
					div LOADING ...
			div.footer
				button.btRefresh.button Refresh
				button.btSetInterval.button Interval					
			div#dlgMandants.dialog.center(title="Mandants")							
			div#dlgSmDetails.dialog.center(title="")				
				button#btLocationView Location View
				button#btActivityView Activity View
				button#btMapView Map View
				button#btChartView Chart View
				button#btRemoveSm Remove
				
		div#locationScreen(style='display:none;')
			div.header.border
				table(style="width:100%") 
					tr
						th
							button.btBack.button Back
						th.thScreenTitle
							h1.screenTitle.shadow Location View
						th
							button#btViewActs.button View Act
			div.body.border
			div.footer				
				button.btRefresh.button Refresh
				button.btSetInterval.button Interval					
				button.btSetDate.button Date	

		div#activityScreen(style='display:none;')
			div.header.border
				table(style="width:100%") 
					tr
						th
							button.btBack.button Back
						th.thScreenTitle
							h1.screenTitle.shadow Location View						
			div.body.border
			div.footer
				button.btRefresh.button Refresh
				button.btSetInterval.button Interval					
				button.btSetDate.button Date	
				button.btSetLocation.button Set Location
				
		div#mapScreen(style='display:none;')
			div.header.border
				table(style="width:100%") 
					tr
						th
							button.btBack.button Back
						th.thScreenTitle
							h1.screenTitle.shadow Map View						
			div.body.border
			div.footer				
				button.btRefresh.button Refresh
				button.btSetInterval.button Interval					
				button.btSetDate.button Date
				
		div#chartScreen(style='display:none;')
			div.header.border
				table(style="width:100%") 
					tr
						th
							button.btBack.button Back
						th.thScreenTitle
							h1.screenTitle.shadow Map View						
			div.body.border
			div.footer
				button.btRefresh.button Refresh
				button.btSetInterval.button Interval					
				button.btSetDate.button Date			
		
		div.dlgSetLocation.dialog(title="Set Location")			
		
		div.dlgSetDate.dialog.center(title="Date")			
		
		div.dlgSetInterval.dialog.center(title="Set Interval")
			button.btIntervalValue(mins="0") Clear
			button.btIntervalValue(mins="1") 1 minute
			button.btIntervalValue(mins="5") 5 minutes
			button.btIntervalValue(mins="10") 10 minutes
			button.btIntervalValue(mins="30") 30 minutes